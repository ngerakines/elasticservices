		<com.google.protobuf.protobuf-java.version>2.4.1</com.google.protobuf.protobuf-java.version>
		<com.netflix.archaius.version>0.5.11</com.netflix.archaius.version>
		<com.netflix.servo.version>0.4.47</com.netflix.servo.version>
		<com.socklabs.maven-protobuff.version>1.0.0</com.socklabs.maven-protobuff.version>
