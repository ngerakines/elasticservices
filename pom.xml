			<id>examples</id>
			<modules>
				<module>examples/calc-service</module>
				<module>examples/calc-webapp</module>
			</modules>
		</profile>
	</profiles>

	<modules>
		<module>core</module>
		<module>gossip</module>
		<module>http</module>
		<module>rabbitmq</module>
		<module>activemq</module>
		<module>work</module>
	</modules>
</project>